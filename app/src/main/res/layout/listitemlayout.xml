<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/Profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="3dp"
            app:cardCornerRadius="5dp"
            >
            <TextView
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VG"
                android:textSize="60sp"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vishal Goswami"
        app:layout_constraintStart_toEndOf="@id/Profile"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/Profile"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delhi | Student"
        app:layout_constraintStart_toStartOf="@id/name"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Within 1.5 KM"
        app:layout_constraintStart_toStartOf="@id/Location"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/Location"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/emojis"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/Distance"
        app:layout_constraintStart_toStartOf="@id/Distance"
        >
        <TextView
            android:id="@+id/Coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/noun_coffee_6925171"
            app:layout_constraintStart_toStartOf="@id/Location"
            android:textSize="10sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/Location"
            android:layout_marginTop="5dp"
            /><TextView
        android:id="@+id/Business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:layout_margin="3dp"
        android:drawableStart="@drawable/noun_business_6918071"
        app:layout_constraintStart_toStartOf="@id/Location"
        android:textSize="10sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/Location"
        android:layout_marginTop="5dp"
        />
        <TextView
            android:id="@+id/Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friendship"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/noun_people_4272788"
            app:layout_constraintStart_toStartOf="@id/Location"
            android:textSize="10sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/Location"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Hi Community! I am open to new connections"
        app:layout_constraintTop_toBottomOf="@id/emojis"
        app:layout_constraintStart_toStartOf="@id/emojis"
        />

</androidx.constraintlayout.widget.ConstraintLayout>